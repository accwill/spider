{
  "compilerOptions": {
    "types": ["jest"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }
  },
  "include": ["lib/**/*", "tests/**/*"]
}
